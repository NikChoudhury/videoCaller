<%- include('../layouts/header.ejs') %>

  <title>Video Caller</title>
  </head>
 

    <body>
      <%- include('../layouts/navbar.ejs') %>
       <!-- Flash Messages -->
        <%- include('../layouts/flash_messages.ejs') %>
      <div>
        <input type="text" name="url" id="url" />
        <button onclick="go()">Go</button>
      </div>

      <script>
        let InputUrl = document.getElementById("url");
        let url = "";

        function go() {
          url = InputUrl.value;
          if (url !== "") {
            url = url.split("/");
            console.log(url.length - 1);
            window.location.href = `/room/${url[url.length - 1]}`;
          } else {
            url =
              Math.random().toString(36).substring(2, 30) +
              "videocaller" +
              Math.random().toString(36).substring(2, 30);
            window.location.href = `/room/${url}`;
          }
        }
      </script>
    </body>

    </html>